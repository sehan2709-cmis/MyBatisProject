<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Board">

    <insert id="insertBoard">
        insert into BOARD2 (title,writer,content,category,topic) values (#{title}, #{writer}, #{content}, #{category}, #{topic})
    </insert>
    <update id="updateBoard">
         update BOARD2 set title = #{title}, writer = #{writer}, content = #{content}, category = #{category}, topic = #{topic} where seq = #{seq}
    </update>
    <delete id="deleteBoard">
        delete from BOARD2 where seq = #{seq}
    </delete>
    <select id="getBoard" resultType="board">
        select * from BOARD2 where seq = #{seq}
    </select>
    <select id="getBoardList" resultType="board">
        select * from BOARD2 order by seq desc
    </select>

</mapper>

